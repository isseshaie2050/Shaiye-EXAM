<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  Options +FollowSymLinks -MultiViews

  # 1. If the request is for index.html, serve it directly
  RewriteRule ^index\.html$ - [L]

  # 2. If the requested filename exists as a file or directory, serve it
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 3. Otherwise, rewrite everything to index.html so React can handle the route
  RewriteRule ^ index.html [L]
</IfModule>